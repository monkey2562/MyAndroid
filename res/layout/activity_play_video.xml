<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.myandroid.media.video.PlayVideoActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SurfaceViewPlayer" />
    <Button 
        android:id="@+id/btnMediaPlay"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="MeidaPlay播放视频"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VideoViewPlayer" />
    <Button 
        android:id="@+id/btnVideoView"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="VideoView播放视频"/>

</LinearLayout>
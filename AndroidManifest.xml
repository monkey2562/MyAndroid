<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mk.myandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.LayoutActivity"
            android:label="@string/title_activity_layout" >
        </activity>
        <activity
            android:name=".layout.NeonlightActivity"
            android:label="@string/title_activity_neonlight" >
        </activity>
        <activity
            android:name=".layout.LinearActivity"
            android:label="@string/title_activity_linear" >
        </activity>
        <activity
            android:name=".layout.PanelActivity"
            android:label="@string/title_activity_panel" >
        </activity>
        <activity
            android:name=".lifetime.LifetimeActivity"
            android:label="@string/title_activity_lifetime" >
        </activity>
        <activity
            android:name=".lifetime.DatatransmissionActivity"
            android:label="@string/title_activity_datatransmission" >
        </activity>
        <activity
            android:name=".service.ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>

        <service android:name=".service.EchoService" >
        </service>

        <!--
        <receiver android:name=".broadcastreceiver.MyBC" >
        </receiver>
        -->

        <activity
            android:name=".broadcastreceiver.BroadcastreceiverActivity"
            android:label="@string/title_activity_broadcastreceiver" >
        </activity>
        <activity
            android:name=".contentprovider.ContentproviderActivity"
            android:label="@string/title_activity_contentprovider" >
        </activity>
        <activity
            android:name=".intent.IntentActivity"
            android:label="@string/title_activity_intent" >
        </activity>
        <activity
            android:name=".intent.ActionActivity"
            android:label="@string/title_activity_action" >
            <intent-filter>
                <action android:name="com.mk.myandroid.intent.action.actionactivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intent.ImageviewerActivity"
            android:label="@string/title_activity_imageviewer" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:mimeType="image/*"
                    android:scheme="file" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mk.myandroid.listview.ListviewActivity"
            android:label="@string/title_activity_listview" >
        </activity>
    </application>

</manifest>
